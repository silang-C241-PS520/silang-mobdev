<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application dark theme. -->
    <style name="Base.Theme.Silangmobdev.Dark" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/colorPrimaryDarkMode</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDarkMode</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryLightDarkMode</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/colorSecondaryDarkMode</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDarkDarkMode</item>

        <!-- Accent color -->
        <item name="colorAccent">@color/colorAccentDarkMode</item>


        <!-- Divider color -->
        <item name="dividerColor">@color/dividerDarkMode</item>
    </style>

    <style name="AppTheme.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="strokeWidth">0dp</item>
        <item name="cardBackgroundColor">@color/backgroundSecondaryDarkMode</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="Theme.Silangmobdev.Dark" parent="Base.Theme.Silangmobdev.Dark" />
</resources>
